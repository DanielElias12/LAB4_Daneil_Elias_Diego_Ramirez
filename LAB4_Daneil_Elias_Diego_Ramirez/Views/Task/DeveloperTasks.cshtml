@model IEnumerable<LAB4_Daneil_Elias_Diego_Ramirez.Models.Data.Task>

@{
    ViewData["Title"] = "DeveloperTasks";
}

<h1>Developer Tasks</h1>

<div class="form-group">
    <input type="submit" value="Add Task" onclick="location.href='@Url.Action("CreateTask", "Task")'" class="btn btn-outline-primary" />
</div>
<div class="form-group">
    <input type="submit" value="Get current task" onclick="location.href='@Url.Action("GetCurrentTask", "Task")'" class="btn btn-outline-primary" />
</div>
<div class="form-group">
    <input type="submit" value="View all tasks" onclick="location.href='@Url.Action("ViewAllTasks", "Task")'" class="btn btn-outline-primary" />
</div>
<div class="form-group">
    <input type="submit" value="Log Out" onclick="location.href='@Url.Action("Index", "Task")'" class="btn btn-outline-primary" />
</div>
@if (null != TempData["alertMessage"])
{
    <script type="text/javascript">
       alert("@TempData["alertMessage"]");
    </script>
}